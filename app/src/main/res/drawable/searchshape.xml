<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient with vibrant blue and teal tones -->
    <gradient
        android:angle="45"
        android:endColor="#62AFEF"
        android:startColor="#00BCD4"
        android:type="linear" />

    <!-- Soft contrasting border -->
    <stroke
        android:width="1dp"
        android:color="#0288D1" />  <!-- Darker Blue border -->

    <!-- Rounded corners for smooth modern feel -->
    <corners android:radius="@dimen/_45sdp" />

    <!-- Padding around the search text for comfort -->
    <padding
        android:bottom="10dp"
        android:left="20dp"
        android:right="20dp"
        android:top="10dp" />

    <!-- Solid white background inside the shape -->
    <solid android:color="#F0F3F8" />
</shape>
