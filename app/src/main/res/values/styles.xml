<resources>
    <!-- Define custom style for menu item text -->
    <style name="PopupMenuTextStyle">
        <item name="android:textColor">@color/headingText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomSearchView">
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:background">@drawable/searchshape</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Dialog background -->
        <item name="android:background">#FFFFFF</item> <!-- White background -->

        <!-- Text colors -->
        <item name="android:textColorPrimary">#000000</item> <!-- Title and main text color -->
        <item name="android:textColorSecondary">#000000</item> <!-- Secondary text (e.g., buttons) -->
        <item name="android:textColor">#000000</item> <!-- Fallback text color -->

        <!-- Button text color -->
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>

        <!-- Dialog width -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item> <!-- Set the desired button text color -->
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/background</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/background</item>
    </style>
</resources>
