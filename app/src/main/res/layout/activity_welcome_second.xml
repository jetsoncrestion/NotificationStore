<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WelcomeSecond">

    <ImageView
        android:id="@+id/imageViewFilter"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_150sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/filtersecond" />

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/special"
        android:text="Find your perfect Notifications!"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFilter"
        app:layout_constraintStart_toStartOf="@+id/imageViewFilter"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFilter" />

    <TextView
        android:id="@+id/textViewSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/paragraphHeadingText"
        android:text="Use the filter button to view only notifications from a specific app, ot rhose received within a time range; or combine both filter at the same time."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textViewHeading"
        app:layout_constraintStart_toStartOf="@+id/textViewHeading"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeading" />

    <TextView
        android:id="@+id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Skip"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:textAlignment="center"
        android:textColor="@color/paragraphHeadingText"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSkip"
        app:srcCompat="@drawable/arrow_right" />

    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewArrow"
        app:layout_constraintEnd_toStartOf="@+id/imageViewArrow"
        app:layout_constraintStart_toEndOf="@+id/textViewSkip"
        app:layout_constraintTop_toTopOf="@+id/textViewSkip">

        <View
            android:id="@+id/dot1"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_inactive" />

        <View
            android:id="@+id/dot2"
            android:layout_width="15dp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_active" />

        <View
            android:id="@+id/dot3"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_inactive" />

        <View
            android:id="@+id/dot4"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_inactive" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>