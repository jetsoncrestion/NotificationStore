<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AppPermissionActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:backgroundTint="#F06924"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/applicationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Notification History Saver"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAllowAccess"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_42sdp"
        android:text="Allow Access"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/custom_svae"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPermission" />

    <ImageView
        android:id="@+id/imageViewPermission"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPermissionTextSecond"
        app:srcCompat="@drawable/bla" />

    <TextView
        android:id="@+id/textViewPermissionTextFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:fontFamily="@font/roboto"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="@string/permissionTextFirst"
        android:textAlignment="center"
        android:textColor="@color/paragraphHeadingText"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textViewPermissionTextSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissionTextSecond"
        android:textColor="@color/paragraphHeadingText"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPermissionTextFirst" />
</androidx.constraintlayout.widget.ConstraintLayout>