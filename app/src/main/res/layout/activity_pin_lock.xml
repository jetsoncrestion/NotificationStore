<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PinLock">

    <TextView
        android:id="@+id/textViewCurrentPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Current PIN"
        android:layout_marginTop="@dimen/_100sdp"
        android:textSize="@dimen/_24sdp"
        android:textColor="#EF6824"
        android:letterSpacing=".02"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/PinDisplayBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewCurrentPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/pin1"
            style="@style/PinBoxStyle" />

        <TextView
            android:id="@+id/pin2"
            style="@style/PinBoxStyle" />

        <TextView
            android:id="@+id/pin3"
            style="@style/PinBoxStyle" />

        <TextView
            android:id="@+id/pin4"
            style="@style/PinBoxStyle" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_400sdp"
        android:background="@color/background"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PinDisplayBox">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button1"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="1"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toStartOf="@+id/button3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button2"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="3"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/button3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button3"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="2"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toStartOf="@+id/button2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/button1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button4"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="4"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button1"
                        app:layout_constraintStart_toStartOf="@+id/button1"
                        app:layout_constraintTop_toBottomOf="@+id/button1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button5"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="5"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button3"
                        app:layout_constraintStart_toStartOf="@+id/button3"
                        app:layout_constraintTop_toBottomOf="@+id/button3" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button6"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:elevation="0dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="6"
                        android:stateListAnimator="@null"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button2"
                        app:layout_constraintStart_toStartOf="@+id/button2"
                        app:layout_constraintTop_toBottomOf="@+id/button2" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button7"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="7"
                        android:stateListAnimator="@null"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:elevation="0dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button4"
                        app:layout_constraintStart_toStartOf="@+id/button4"
                        app:layout_constraintTop_toBottomOf="@+id/button4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button8"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="8"
                        android:stateListAnimator="@null"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:elevation="0dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button5"
                        app:layout_constraintStart_toStartOf="@+id/button5"
                        app:layout_constraintTop_toBottomOf="@+id/button5" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button9"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="9"
                        android:stateListAnimator="@null"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:elevation="0dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button6"
                        app:layout_constraintStart_toStartOf="@+id/button6"
                        app:layout_constraintTop_toBottomOf="@+id/button6" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button0"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:elevation="0dp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="0"
                        android:stateListAnimator="@null"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button8"
                        app:layout_constraintStart_toStartOf="@+id/button8"
                        app:layout_constraintTop_toBottomOf="@+id/button8" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonOk"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:elevation="0dp"
                        android:background="@color/background"
                        android:fontFamily="@font/poppins_regular"
                        android:text="OK"
                        android:stateListAnimator="@null"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toEndOf="@+id/button9"
                        app:layout_constraintStart_toStartOf="@+id/button9"
                        app:layout_constraintTop_toBottomOf="@+id/button9" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewDelete"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        app:layout_constraintEnd_toEndOf="@+id/button7"
                        app:layout_constraintStart_toStartOf="@+id/button7"
                        app:layout_constraintTop_toBottomOf="@+id/button7"
                        app:srcCompat="@drawable/delete_pin" />

                    <TextView
                        android:id="@+id/textViewForgetYourPin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forget Your Pin?"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>