<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WelcomeSecond">

    <ImageView
        android:id="@+id/imageViewFilter"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_150sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/filtersecond" />

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/special"
        android:text="@string/find_your_perfect_notifications"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFilter"
        app:layout_constraintStart_toStartOf="@+id/imageViewFilter"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFilter" />

    <TextView
        android:id="@+id/textViewSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/paragraphHeadingText"
        android:text="@string/use_the_filter_button_to_view_only_notifications_from_a_specific_app_ot_rhose_received_within_a_time_range_or_combine_both_filter_at_the_same_time"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textViewHeading"
        app:layout_constraintStart_toStartOf="@+id/textViewHeading"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeading" />
</androidx.constraintlayout.widget.ConstraintLayout>
