<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WelcomeScreen">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_100sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logofinal" />

    <TextView
        android:id="@+id/textViewWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Notify Vault!"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_20sdp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/special"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLogo"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogo"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/subHeadingText"
        android:textSize="@dimen/_14ssp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:fontFamily="@font/roboto"
        android:text="Welcome to a smarter way to manage your notifications! Effortlessly keep track of all your notifications and access your history anytime, all in one place."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeText" />

    <TextView
        android:id="@+id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="center"
        android:textColor="@color/paragraphHeadingText"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSkip"
        app:srcCompat="@drawable/arrow_right" />

    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewArrow"
        app:layout_constraintEnd_toStartOf="@+id/imageViewArrow"
        app:layout_constraintStart_toEndOf="@+id/textViewSkip"
        app:layout_constraintTop_toTopOf="@+id/textViewSkip">

        <View
            android:id="@+id/dot1"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_active" />

        <View
            android:id="@+id/dot2"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_inactive" />

        <View
            android:id="@+id/dot3"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_inactive" />

        <View
            android:id="@+id/dot4"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/circle_inactive" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>